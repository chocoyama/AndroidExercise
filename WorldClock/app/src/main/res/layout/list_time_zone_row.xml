<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <TextClock android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="10:00"
               android:textAppearance="@style/TextAppearance.AppCompat.Medium"
               android:layout_marginTop="16dp"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="8dp" android:layout_marginBottom="16dp"
               app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/textClock"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/timeZoneTextView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/textClock"
            android:layout_marginEnd="8dp" tools:text="日本標準時"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

</android.support.constraint.ConstraintLayout>